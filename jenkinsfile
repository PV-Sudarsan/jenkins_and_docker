pipeline {
    agent any
    stages {
        stage('Build SpringApp') {
            steps {
                echo "Building SpringApp Docker image"
                dir('jenkins_and_docker/springapp') {
                    sh 'docker build -t springapp:latest .'
                }
            }
        }
        stage('Build Frontend') {
            steps {
                echo "Building Frontend Docker image"
                dir('jenkins_and_docker/frontend') {
                    sh 'docker build -t frontend:latest .'
                }
            }
        }
        stage('Run') {
            steps {
                echo "Run Started"
                sh 'docker run -d -p 8082:8082 --name springapp springapp:latest'
                sh 'docker run -d -p 5173:5173 --name frontend frontend:latest'
            }
        }
    }
    post {
        always {
            echo "Pipeline finished"
        }
    }
}